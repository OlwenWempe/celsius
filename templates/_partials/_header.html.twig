<header>
	<nav class="navbar navbar-expand-lg bg-body-tertiary">
		<div class="container-fluid">
			<a class="navbar-brand" href="{{ path('app_main') }}"><img class="rounded-4" src='../images/Logo_celsius.png' alt="Logo Celsius" height="70"></a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarSupportedContent">
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					<li class="nav-item">
						<a class="nav-link active text-black-50" aria-current="page" href="#">{% trans %}Home{% endtrans %}</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="#">{% trans %}Link{% endtrans %}</a>
					</li>
					{% if is_granted("ROLE_ADMIN") %}
						<li class="nav-item me-auto mb-2 mb-lg-0">
							<a class="nav-link" href="{{ path('admin') }}">{% trans %}Admin dashboard{% endtrans %}</a>
						</li>
					{% endif %}
					{% if is_granted('ROLE_USER') %}
						<a class="nav-link text-black-50" href="{{ path('app_logout') }}">{% trans %}Log Out{% endtrans %}</a>
					{% else %}
						<a class="nav-link text-black-50" href="{{ path('app_login') }}">{% trans %}Log In{% endtrans %}</a>
						<a href="{{ path('app_register') }}" class="btn btn-dark">{% trans %}Sign up{% endtrans %}</a>
					{% endif %}
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="dropdown-language" role="button" + data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							{{ app.request.locale|locale_name(app.request.locale)|u.title }}
						</a>
						<ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-language">
							<li>
								<a class="dropdown-item" href="{{ path('app_main', {_locale: 'en'}) }}">English</a>
							</li>
							<li>
								<a class="dropdown-item" href="{{ path('app_main', {_locale: 'fr'}) }}">Fran√ßais</a>
							</li>
						</ul>
					</li>
				</ul>

			</div>
		</div>
	</nav>
</header>

{% extends 'base.html.twig' %}

{% block title %}Contractor index{% endblock %}

{% block body %}
    <h1>Contractor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contractor in contractors %}
            <tr>
                <td>{{ contractor.id }}</td>
                <td>{{ contractor.name }}</td>
                <td>
                    <a href="{{ path('app_contractor_show', {'id': contractor.id}) }}">show</a>
                    <a href="{{ path('app_contractor_edit', {'id': contractor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contractor_new') }}">Create new</a>
{% endblock %}
